generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  GOOGLE
  KAKAO
  NAVER
}

model user {
  id String @id @default(uuid())
  nickname String @db.VarChar(12)
  email String @unique @db.VarChar(100)
  provider Provider
  fcmToken String @db.Text
  uid String @db.VarChar(50)
  firebaseId String @db.VarChar(50)
}